<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.google.drive
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
            ref="muk_dms.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='file']" position="after">
                <h2>Google Drive</h2>
                    <div class="row mt16 o_settings_container" name="gdrive">
                        <div class="col-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane" attrs="{'invisible': [('module_google_drive','=',False)]}">
                                <span class="o_form_label">Muk Google Drive Folder</span>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="col-md-3 o_light_label" for="muk_document_folder_id"/>
                                        <field name="muk_document_folder_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>
